# Example Makefile for AAPL core files.

HEADERS = \
        include/aapl.h \
        include/system_includes.h \
        include/aapl_library.h \
        include/aapl_core.h \
        include/sbus.h \
        include/mdio.h \
        include/gpio_mdio.h \
        include/i2c.h \
        include/spico.h \
        include/asic_info.h \
        include/serdes_core.h \
        include/pmd.h \
        include/logging.h


SOURCES = \
        library.c \
        aapl_core.c \
        aacs.c \
        sbus.c \
        mdio.c \
        gpio_mdio.c \
        i2c.c \
        spico.c \
        user_code.c \
        serdes_core.c \
        pmd.c \
        logging.c


OBJECTS = $(SOURCES:.c=.o)

TARGET = libaapl-LGPL.so

CFLAGS = -fPIC -Iinclude -DHAVE_UNISTD_H -g

$(TARGET) : $(OBJECTS)
	gcc -g -shared -o $(TARGET) $(OBJECTS)

$(OBJECTS) : $(HEADERS)

